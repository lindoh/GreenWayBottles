<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:GreenWayBottles.ViewModels"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="GreenWayBottles.Views.LogoutView"
             Title="LogoutView" 
             BackgroundImageSource="background_desktop.jpeg">
    
    <VerticalStackLayout Margin="20">
        <Label 
            Text="We hope to see you again soon! &#x0a;Please click below to Logout"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large" FontAttributes="Italic"
            TextColor="#155ca1" Margin="10"/>

        <Button Text="Logout" FontSize="Small" BackgroundColor="#155ca1"
             Margin="20" Padding="5" WidthRequest="200"
                Command="{Binding LogoutCommand}"/>
    </VerticalStackLayout>
</ContentPage>