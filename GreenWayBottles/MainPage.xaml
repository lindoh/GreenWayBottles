<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:GreenWayBottles.Views"
       x:Class="GreenWayBottles.MainPage"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
       Shell.TabBarBackgroundColor="#6e9b19"
       Shell.TabBarForegroundColor="Black"
       Shell.BackgroundColor="#155ca1">

    <FlyoutItem>
        <ShellContent Title="Home"
                      ContentTemplate="{x:DataTemplate views:HomeView}"/>
        <ShellContent Title="Capture New Bottles"
                      ContentTemplate="{x:DataTemplate views:CaptureNewBottlesView}"/>
        <ShellContent Title="Create User Account"
                      ContentTemplate="{x:DataTemplate views:CreateUserAccountView}"/>
        <ShellContent Title="Update User Account"
                      ContentTemplate="{x:DataTemplate views:UpdateUserAccountView}"/>
        <ShellContent Title="Update Banking Details"
                      ContentTemplate="{x:DataTemplate views:UpdateBankingView}"/>
        <ShellContent Title="Update Admin Account"
                      ContentTemplate="{x:DataTemplate views:UpdateAdminAccountView}"/>
    </FlyoutItem>
    
 
</Shell>
